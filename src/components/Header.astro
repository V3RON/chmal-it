---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
import { Menu, Github, X } from "lucide-astro";
import { Image } from "@unpic/astro";
import profileImage from "../assets/profile.png";
import Button from "@/components/ui/Button.astro";
import { generateBlurhashPlaceholder } from "@/lib/blurhash";

const profilePlaceholder = await generateBlurhashPlaceholder('src/assets/profile.png');
---

<header class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container flex h-16 items-center">
    
    {/* Desktop Logo & Nav */}
    <div class="mr-4 hidden md:flex">
      <a href="/" class="mr-6 flex items-center space-x-2">
        <div class="h-8 w-8 overflow-hidden rounded-full border border-border/50 bg-muted">
          <Image 
            src={profileImage} 
            alt="Szymon Chmal" 
            class="h-full w-full object-cover"
            width={64}
            height={64}
            loading="eager"
            background={profilePlaceholder}
          />
        </div>
        <span class="hidden font-bold sm:inline-block tracking-tight">
          {SITE_TITLE}
        </span>
      </a>
      <nav class="flex items-center space-x-6 text-sm font-medium">
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/projects">Projects</HeaderLink>
        <HeaderLink href="/talks">Talks</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </nav>
    </div>

    {/* Mobile Logo */}
    <div class="flex md:hidden">
       <a href="/" class="flex items-center space-x-2">
        <div class="h-8 w-8 overflow-hidden rounded-full border border-border/50 bg-muted">
          <Image 
            src={profileImage} 
            alt="Szymon Chmal" 
            class="h-full w-full object-cover"
            width={64}
            height={64}
            loading="eager"
            background={profilePlaceholder}
          />
        </div>
        <span class="font-bold tracking-tight">
          {SITE_TITLE}
        </span>
      </a>
    </div>

    {/* Right Side Actions */}
    <div class="flex flex-1 items-center justify-end space-x-4">
      <nav class="flex items-center space-x-1">
        <Button variant="ghost" size="icon" href="https://github.com/v3ron" target="_blank" rel="noreferrer">
            <Github class="h-4 w-4" />
            <span class="sr-only">GitHub</span>
        </Button>
        <Button variant="ghost" size="icon" href="https://x.com/chmalszymon" target="_blank" rel="noreferrer">
            <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 fill-current"><title>X</title><path d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"/></svg>
            <span class="sr-only">X (Twitter)</span>
        </Button>
        <ThemeToggle />
        
        {/* Mobile Menu Trigger */}
        <Button variant="ghost" size="icon" id="mobile-menu-trigger" class="md:hidden">
            <Menu class="h-5 w-5" />
            <span class="sr-only">Toggle Menu</span>
        </Button>
      </nav>
    </div>
  </div>

  {/* Mobile Menu Overlay */}
  <div id="mobile-menu" class="group fixed inset-0 z-50 flex justify-end md:hidden pointer-events-none" data-state="closed">
     {/* Backdrop */}
     <div id="mobile-menu-backdrop" class="absolute inset-0 bg-background/80 backdrop-blur-sm transition-opacity duration-300 opacity-0 group-data-[state=open]:opacity-100 pointer-events-auto cursor-pointer" aria-hidden="true"></div>
     
     {/* Panel */}
     <div class="relative z-10 h-full w-3/4 max-w-sm bg-background border-l border-border p-6 shadow-xl transition-transform duration-300 translate-x-full group-data-[state=open]:translate-x-0 pointer-events-auto">
        <div class="flex flex-col space-y-6">
            <div class="flex items-center justify-between">
                <span class="font-bold text-lg">{SITE_TITLE}</span>
                <button id="mobile-menu-close" class="rounded-sm opacity-70 ring-offset-background transition-opacity hover:opacity-100 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
                    <X class="h-6 w-6" />
                    <span class="sr-only">Close</span>
                </button>
            </div>
            <nav class="flex flex-col space-y-4">
                <a href="/blog" class="text-lg font-medium transition-colors hover:text-primary">Blog</a>
                <a href="/projects" class="text-lg font-medium transition-colors hover:text-primary">Projects</a>
                <a href="/talks" class="text-lg font-medium transition-colors hover:text-primary">Talks</a>
                <a href="/about" class="text-lg font-medium transition-colors hover:text-primary">About</a>
            </nav>
        </div>
     </div>
  </div>
</header>

<script is:inline>
  const trigger = document.getElementById('mobile-menu-trigger');
  const close = document.getElementById('mobile-menu-close');
  const backdrop = document.getElementById('mobile-menu-backdrop');
  const menu = document.getElementById('mobile-menu');

  if (trigger && close && menu && backdrop) {
    const toggleMenu = (isOpen) => {
        if (isOpen) {
            menu.setAttribute('data-state', 'open');
            document.body.style.overflow = 'hidden'; // Prevent scrolling
        } else {
            menu.setAttribute('data-state', 'closed');
            document.body.style.overflow = '';
        }
    };

    trigger.addEventListener('click', () => toggleMenu(true));
    close.addEventListener('click', () => toggleMenu(false));
    backdrop.addEventListener('click', () => toggleMenu(false));

    // Close on link click
    menu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => toggleMenu(false));
    });
  }
</script>
